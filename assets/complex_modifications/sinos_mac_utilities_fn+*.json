{
  "title": "Sino's mac utilities with fn + *",
  "maintainers": ["sino"],
  "homepage": "https://github.com/SinoThomas/macOS-karabiner-shortcuts",
  "import_url": "karabiner://karabiner/assets/complex_modifications/import?url=https://raw.githubusercontent.com/SinoThomas/macOS-karabiner-shortcuts/master/sinos_mac_utilities.json",
  "rules": [
    {
      "description": "CapsLock    to     fn",
      "manipulators": [
        {
          "type": "basic",
          "from": { "key_code": "caps_lock" },
          "to": [{ "key_code": "fn" }]
        }
      ]
    },

    {
      "description": "Fn + S              Backspace",
      "manipulators": [
        {
          "type": "basic",
          "from": { "key_code": "s", "modifiers": { "mandatory": ["fn"], "optional": ["any"] } },
          "to": [{ "key_code": "delete_or_backspace" }]
        }
      ]
    },
    {
      "description": "Fn + D              Delete",
      "manipulators": [
        {
          "type": "basic",
          "from": { "key_code": "d", "modifiers": { "mandatory": ["fn"], "optional": ["any"] } },
          "to": [{ "key_code": "delete_forward" }]
        }
      ]
    },
    {
      "description": "Fn + E              Enter",
      "manipulators": [
        {
          "type": "basic",
          "from": { "key_code": "e", "modifiers": { "mandatory": ["fn"], "optional": ["any"] } },
          "to": [{ "key_code": "return_or_enter" }]
        }
      ]
    },
    {
      "description": "Fn + W              ESC",
      "manipulators": [
        {
          "type": "basic",
          "from": { "key_code": "w", "modifiers": { "mandatory": ["fn"], "optional": ["any"] } },
          "to": [{ "key_code": "escape" }]
        }
      ]
    },

    {
      "description": "Fn + JKIL           Arrow Keys (with Cmd as Shift)",
      "manipulators": [
        {
          "type": "basic",
          "from": { "key_code": "j", "modifiers": { "mandatory": ["fn", "command"], "optional": ["any"] } },
          "to": [{ "key_code": "left_arrow", "modifiers": ["left_shift"] }]
        },
        {
          "type": "basic",
          "from": { "key_code": "k", "modifiers": { "mandatory": ["fn", "command"], "optional": ["any"] } },
          "to": [{ "key_code": "down_arrow", "modifiers": ["left_shift"] }]
        },
        {
          "type": "basic",
          "from": { "key_code": "i", "modifiers": { "mandatory": ["fn", "command"], "optional": ["any"] } },
          "to": [{ "key_code": "up_arrow", "modifiers": ["left_shift"] }]
        },
        {
          "type": "basic",
          "from": { "key_code": "l", "modifiers": { "mandatory": ["fn", "command"], "optional": ["any"] } },
          "to": [{ "key_code": "right_arrow", "modifiers": ["left_shift"] }]
        },
        {
          "type": "basic",
          "from": { "key_code": "j", "modifiers": { "mandatory": ["fn"], "optional": ["any"] } },
          "to": [{ "key_code": "left_arrow" }]
        },
        {
          "type": "basic",
          "from": { "key_code": "k", "modifiers": { "mandatory": ["fn"], "optional": ["any"] } },
          "to": [{ "key_code": "down_arrow" }]
        },
        {
          "type": "basic",
          "from": { "key_code": "i", "modifiers": { "mandatory": ["fn"], "optional": ["any"] } },
          "to": [{ "key_code": "up_arrow" }]
        },
        {
          "type": "basic",
          "from": { "key_code": "l", "modifiers": { "mandatory": ["fn"], "optional": ["any"] } },
          "to": [{ "key_code": "right_arrow" }]
        }
      ]
    },
    {
      "description": "Fn + H;             Move cursor by word, left & right (with Cmd as Shift)",
      "manipulators": [
        {
          "type": "basic",
          "from": { "key_code": "h", "modifiers": { "mandatory": ["fn", "command"], "optional": ["any"] } },
          "to": [{ "key_code": "left_arrow", "modifiers": ["left_alt", "left_shift"] }]
        },
        {
          "type": "basic",
          "from": { "key_code": "h", "modifiers": { "mandatory": ["fn"], "optional": ["any"] } },
          "to": [{ "key_code": "left_arrow", "modifiers": ["left_alt"] }]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "semicolon",
            "modifiers": { "mandatory": ["fn", "command"], "optional": ["any"] }
          },
          "to": [{ "key_code": "right_arrow", "modifiers": ["left_alt", "left_shift"] }]
        },
        {
          "type": "basic",
          "from": { "key_code": "semicolon", "modifiers": { "mandatory": ["fn"], "optional": ["any"] } },
          "to": [{ "key_code": "right_arrow", "modifiers": ["left_alt"] }]
        }
      ]
    },
    {
      "description": "Fn + UO             Move->line Start, End (with Cmd as Shift)",
      "manipulators": [
        {
          "type": "basic",
          "from": { "key_code": "u", "modifiers": { "mandatory": ["fn", "command"], "optional": ["any"] } },
          "to": [{ "key_code": "left_arrow", "modifiers": ["command", "left_shift"] }]
        },
        {
          "type": "basic",
          "from": { "key_code": "u", "modifiers": { "mandatory": ["fn"], "optional": ["any"] } },
          "to": [{ "key_code": "left_arrow", "modifiers": ["command"] }]
        },
        {
          "type": "basic",
          "from": { "key_code": "o", "modifiers": { "mandatory": ["fn", "command"], "optional": ["any"] } },
          "to": [{ "key_code": "right_arrow", "modifiers": ["command", "left_shift"] }]
        },
        {
          "type": "basic",
          "from": { "key_code": "o", "modifiers": { "mandatory": ["fn"], "optional": ["any"] } },
          "to": [{ "key_code": "right_arrow", "modifiers": ["command"] }]
        }
      ]
    },
      
    {
      "description": "Fn + NM             Delete Words",
      "manipulators": [
        {
          "type": "basic",
          "from": { "key_code": "n", "modifiers": { "mandatory": ["fn"], "optional": ["any"] } },
          "to": [{ "key_code": "delete_or_backspace", "modifiers": ["left_option"] }]
        },
        {
          "type": "basic",
          "from": { "key_code": "m", "modifiers": { "mandatory": ["fn"], "optional": ["any"] } },
          "to": [{ "key_code": "delete_forward", "modifiers": ["left_option"] }]
        }
      ]
    },
    {
      "description": "Fn + ,.             Delete line Start, End",
      "manipulators": [
        {
          "type": "basic",
          "from": { "key_code": "comma", "modifiers": { "mandatory": ["fn"], "optional": ["any"] } },
          "to": [{ "key_code": "left_arrow", "modifiers": ["command", "shift"] }, { "key_code": "delete_or_backspace" }]
        },
        {
          "type": "basic",
          "from": { "key_code": "period", "modifiers": { "mandatory": ["fn"], "optional": ["any"] } },
          "to": [
            { "key_code": "right_arrow", "modifiers": ["command", "shift"] },
            { "key_code": "delete_or_backspace" }
          ]
        }
      ]
    },
    {
      "description": "Fn + /              Delete line full (with CMD + Backspace)",
      "manipulators": [
        {
          "type": "basic",
          "from": { "key_code": "slash", "modifiers": { "mandatory": ["fn"], "optional": ["any"] } },
          "to": [
            { "key_code": "right_arrow", "modifiers": ["command"] },
            { "key_code": "delete_or_backspace", "modifiers": ["command"] }
          ]
        }
      ]
    }
  ]
}
